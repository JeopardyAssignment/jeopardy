{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Maven: clean compile",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "compile"
            ],
            "options": {
                "cwd": "${workspaceFolder}/assignment"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Maven: clean package",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "package"
            ],
            "options": {
                "cwd": "${workspaceFolder}/assignment"
            },
            "group": "build"
        },
        {
            "label": "Run App",
            "type": "shell",
            "command": "java",
            "args": [
                "-XX:+ShowCodeDetailsInExceptionMessages",
                "-cp",
                "target/classes",
                "com.jeopardy.App"
            ],
            "options": {
                "cwd": "${workspaceFolder}/assignment"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "Maven: clean compile"
            ]
        }
    ]
}
